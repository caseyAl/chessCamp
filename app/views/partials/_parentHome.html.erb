<body>
	<div class="row">
	<div class= "col s8 m8"> 
		<div class="card">
		    <div class="card-content">
		      <h3> A and M Chess Camp Catalogue </h3>
		      <p>I am a very simple card. I am good at containing small bits of information. I am convenient because I require little markup to use effectively.</p>
		    </div>
		    <div class="card-tabs">
		      <ul class="tabs tabs-fixed-width">
		        <li class="tab"><a href="#test4"> Upcoming Camps </a></li>
		        <li class="tab"><a href="#test5"> Available Curriculums</a></li>
		      </ul>
		    </div>
	    <div class="card-content grey lighten-4">
	      <div id="test4">
				<% if @upcomingCamps.empty? %>
				  <h3>There are no upcoming camps at this time </h3>
				<% else %>
				  <table>
				  <thead> 
				    <tr>
				      <th>Name</th>
				      <th>Start Date</th>
				      <th>Time Slot</th>
				      <th>Remaining Slots</th>
				      <th colspan="3"></th>
				    </tr>
				  </thead>

				  <tbody>
				    <% @upcomingCamps.each do |camp| %>
				      <tr>
				        <td><%= link_to camp.curriculum.name, camp %></td>
				        <td><%= camp.start_date.strftime("%m/%d/%y") %></td>
				        <td><%= camp.time_slot == "am" ? "Morning" : "Afternoon" %></td>
				        <td><% camp.max_students - camp.registrations.count %></td>
				        <td><a class="waves-effect waves-light btn" <%= link_to "Register", camp %> </a></td>
				      </tr>
				    <% end %>
				  </tbody>
				</table>


				<% end %>

				<span class="paginate">
				  <%= will_paginate @upcomingCamps, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next", :param_name => 'upcomingCamps' %>
				</span>
	    </div>

      <div id="test5">
		<% if @currics.empty? %>
		  <h3>There are no curriculums available at this time</h3>
		<% else %>
		  <table>
		  <thead>
		    <tr>
		      <th>Name</th>
		      <th>Ratings</th>
		      
		    </tr>
		  </thead>

		  <tbody>
		    <% @currics.each do |curriculum| %>
		      <tr>
		        <td><%= link_to curriculum.name, curriculum %></td>
		        <td><%= curriculum.min_rating == 0 ? "Unrated" : curriculum.min_rating %> - <%= curriculum.max_rating %></td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>

		    <% end %>


      	

      		</div>  
    	</div>
  	</div>
  	</div>

		  <div class="row">
		    <div class="col s4 m4">
		      <div class="card-panel teal">
					    <h4> My Students </h4>
					        <% if @kids.empty? %>
			  <h3>You haven't registered any students yet </h3>
			<% else %>
			  <table>
			  <thead>
			    <tr>
			      <th>Name </th>
			      <th> Rating </th>
			      <th> Date of Birth </th>
			      <th colspan="3"></th>
			    </tr>
			  </thead>

			  <tbody>
			    <% @kids.each do |student| %>
			      <tr>
			        <td><%= link_to student.name, student %></td>
			        <td><%= student.rating %></td>
			        <td><%= student.date_of_birth %></td>
			        <td><%= link_to 'Edit', edit_student_path(student), :class=>"btn waves-effect waves-light blue" %></td>
			      </tr>
			    <% end %>
			  </tbody>
			</table>

			<span class="paginate">
			  <%= will_paginate @kids, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next", :param_name => 'students' %>
			</span>

			    <% end %>
		      </div>
		    </div>
		  </div>

  	</div>
</body> 