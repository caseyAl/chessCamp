<div id="form-template">

  <!-- create an empty camp instructor object to work with -->
  <% @registration = Registration.new %>
  <!-- now the form template itself -->
  <div class="row">
    <div class="col">
      <h5>Input Credit Card Info </h5>
      <%= simple_form_for(@registration, :url => pay_for_cart_path, :method => :get) do |f| %>
        <%= f.error_notification %>
        <div class="row">
          <div class="form-inputs">
            <%= f.input :credit_card_number, label_html: { class: 'active' } %>
            <%= f.input :expiration_year, label_html: { class: 'active'} %>
            <%= f.input :expiration_month, label_html: { class: 'active'}%>
          </div>
        </div>
        <div class="row">
          <div class="form-actions col s8">
            <%= f.button :submit %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

</div>  