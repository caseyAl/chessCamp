 <p id="notice"><%= notice %></p>

<% if @familys.empty? %>
  <h3>There are no familys in the system at this time</h3>
<% else %>
  <h3>Familys</h3>

  <table>
  <thead>
    <tr>
      <th>Family Name</th>
      <th> Parent </th>
      <th> Phone </th>
      <th> Email </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @familys.each do |family| %>
      <tr>
        <td><%= link_to family.family_name, family %></td>
        <td> <%= family.parent_first_name %></td>
        <td><%= number_to_phone family.user.phone %></td>
        <td><%= family.user.email %></td>
        <td><%= link_to 'Edit', edit_family_path(family), :class=>"btn waves-effect waves-light blue" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<span class="paginate">
  <%= will_paginate @familys, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next", :param_name => 'familys' %>
</span>

    <% end %>
<hr>
<%= link_to 'New family', new_family_path, :class=>"btn waves-effect waves-light blue" %>